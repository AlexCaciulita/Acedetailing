# Nova Detailing - Nginx Reverse Proxy Configuration
# Copy to /etc/nginx/sites-available/novadetailing.ro
# Then: ln -s /etc/nginx/sites-available/novadetailing.ro /etc/nginx/sites-enabled/
# Then: sudo nginx -t && sudo systemctl reload nginx

# Redirect HTTP to HTTPS
server {
    listen 80;
    server_name novadetailing.ro www.novadetailing.ro;
    return 301 https://$host$request_uri;
}

# HTTPS server
server {
    listen 443 ssl http2;
    server_name novadetailing.ro www.novadetailing.ro;

    # SSL certificates (Let's Encrypt)
    # Run: sudo certbot --nginx -d novadetailing.ro -d www.novadetailing.ro
    ssl_certificate /etc/letsencrypt/live/novadetailing.ro/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/novadetailing.ro/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Gzip compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml image/svg+xml application/manifest+json;
    gzip_min_length 1000;
    gzip_vary on;

    # Static asset caching
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|webp|woff|woff2)$ {
        proxy_pass http://127.0.0.1:8000;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # API routes (no caching)
    location /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 60s;
    }

    # All other requests
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
